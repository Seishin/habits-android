<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_cell_habit"
    android:layout_width="match_parent" 
    android:layout_height="wrap_content"
    android:minHeight="@dimen/cell_min_height">

    <RelativeLayout
        android:id="@+id/rl_controls"
        android:layout_width="@dimen/cell_controls_width"
        android:layout_height="@dimen/cell_controls_height"
        android:layout_alignParentRight="true">
        <Button
            android:id="@+id/btn_delete_habit"
            android:layout_width="@dimen/cell_btn_delete_width"
            android:layout_height="@dimen/cell_btn_delete_height"
            android:layout_toLeftOf="@+id/btn_increment_habit"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_trash"/>

        <Button
            android:id="@+id/btn_increment_habit"
            android:layout_width="@dimen/cell_btn_inc_habit_size"
            android:layout_height="@dimen/cell_btn_inc_habit_size"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            android:text="@string/plus_sign"
            android:textSize="@dimen/font_size_large"
            android:textColor="@color/black_B4"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_habit_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/rl_controls"
        android:layout_centerVertical="true"
        android:paddingLeft="@dimen/cell_name_padding"
        android:paddingRight="@dimen/cell_name_padding"
        android:textColor="@color/white_F0"/>
    
</RelativeLayout>