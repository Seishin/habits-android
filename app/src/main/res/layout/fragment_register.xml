<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" 
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/box_register"
        android:layout_width="match_parent"
        android:layout_height="@dimen/box_register_height"
        android:background="@drawable/bg_login_register"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/login_box_margin"
        android:padding="@dimen/login_box_padding">

        <ImageButton
            android:id="@+id/avatar"
            android:layout_width="@dimen/register_avatar_size"
            android:layout_height="@dimen/register_avatar_size"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/register_avatar_margin"
            android:background="@drawable/placeholder_avatar"/>

        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_field_height"
            android:layout_below="@id/avatar"
            android:layout_marginTop="@dimen/login_field_margin_top"
            android:background="@android:color/transparent"
            android:padding="@dimen/login_field_padding"
            android:singleLine="true"
            android:hint="@string/hint_username"
            android:inputType="textEmailAddress"
            android:textColorHint="@color/white_69"
            android:textColor="@color/white_F0"/>

        <View
            android:id="@+id/username_divider"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/username"
            android:background="#50000000"
            />
        
        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_field_height"
            android:layout_below="@+id/username_divider"
            android:background="@android:color/transparent"
            android:singleLine="true"
            android:hint="@string/hint_email"
            android:inputType="textEmailAddress"
            android:textColorHint="@color/white_69"
            android:textColor="@color/white_F0"
            android:padding="@dimen/login_field_padding"
            android:layout_marginTop="@dimen/login_field_margin_top"/>

        <View
            android:id="@+id/email_divider"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#50000000"
            android:layout_below="@id/email"
            />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_field_height"
            android:layout_below="@+id/email_divider"
            android:background="@android:color/transparent"
            android:inputType="textPassword"
            android:singleLine="true"
            android:hint="@string/hint_password"
            android:textColorHint="@color/white_69"
            android:textColor="@color/white_F0"
            android:padding="@dimen/login_field_padding"
            android:layout_marginTop="@dimen/login_field_margin_top"/>

        <View
            android:id="@+id/password_divider"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#50000000"
            android:layout_below="@id/password"/>

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/login_btn_height"
            android:background="@android:color/transparent"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/password"
            android:layout_marginTop="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="@string/btn_register"
            android:textAllCaps="true"
            android:textColor="@color/white_F0"
            android:textSize="@dimen/font_size_normal"/>
     </RelativeLayout>

</RelativeLayout>