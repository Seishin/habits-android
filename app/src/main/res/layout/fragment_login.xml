<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/box_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_box_height"
        android:background="@drawable/bg_login_register"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/login_box_margin"
        android:layout_marginTop="@dimen/login_box_margin_top"
        android:padding="@dimen/login_box_padding">

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_field_height"
            android:background="@android:color/transparent"
            android:singleLine="true"
            android:hint="@string/hint_email"
            android:inputType="textEmailAddress"
            android:textColorHint="@color/white_69"
            android:textColor="@color/white_F0"
            android:padding="@dimen/login_field_padding"
            android:layout_marginTop="@dimen/login_field_margin_top"/>

        <View
            android:id="@+id/email_divider"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#50000000"
            android:layout_below="@id/email"
            />
        
        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_field_height"
            android:layout_below="@+id/email_divider"
            android:background="@android:color/transparent"
            android:inputType="textPassword"
            android:singleLine="true"
            android:hint="@string/hint_password"
            android:textColorHint="@color/white_69"
            android:textColor="@color/white_F0"
            android:padding="@dimen/login_field_padding"
            android:layout_marginTop="@dimen/login_field_margin_top"/>

        <View
            android:id="@+id/password_divider"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#50000000"
            android:layout_below="@id/password"/>
        
        <Button
            android:id="@+id/submit"
            android:layout_width="@dimen/login_btn_width"
            android:layout_height="@dimen/login_btn_height"
            android:background="@color/bg_login"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:text="@string/login"
            android:textAllCaps="true"
            android:textColor="@color/white_F0"/>

    </RelativeLayout>

    <Button
        android:id="@+id/register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/box_login"
        android:textColor="@android:color/white"
        android:text="@string/register"
        android:textAllCaps="false"
        android:background="@android:color/transparent"/>

</RelativeLayout>