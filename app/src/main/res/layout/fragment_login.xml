<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp">

    <co.naughtyspirit.habits.views.widgets.CustomFontTextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign In"
        android:textColor="@android:color/white"
        android:textSize="40sp"
        android:gravity="center"
        android:layout_above="@+id/box_login"
        android:layout_marginBottom="50dp" />

    <RelativeLayout
        android:id="@+id/box_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_box_login"
        android:layout_centerInParent="true">

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:color/transparent"
            android:singleLine="true"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColorHint="#3C000000"
            android:textColor="#000000"
            android:padding="10dp"/>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#28000000"
            android:layout_below="@id/email"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_below="@id/divider">

            <EditText
                android:id="@+id/password"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.85"
                android:background="@android:color/transparent"
                android:inputType="textPassword"
                android:singleLine="true"
                android:hint="Password"
                android:textColorHint="#3C000000"
                android:textColor="#000000"
                android:padding="10dp"/>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15">

                <Button
                    android:id="@+id/submit"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_weight="0.15"
                    android:layout_centerInParent="true"
                    android:background="@drawable/btn_login"
                    android:gravity="center"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/box_login"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/white"
        android:text="You're new? Tap here to register!"
        android:textAllCaps="false"
        android:background="@android:color/transparent"/>

</RelativeLayout>